{
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(src/**)",
      "Write(public/**)",
      "Write(docs/**)",
      "Write(.claude/**)",
      "Write(CLAUDE.md)",
      "Write(.mcp.json)",
      "Write(.env.example)",
      "Write(drizzle/**)",
      "Write(drizzle.config.ts)",
      "Write(next.config.*)",
      "Write(tailwind.config.*)",
      "Write(tsconfig.json)",
      "Write(package.json)",
      "Write(postcss.config.*)",
      "Write(components.json)",
      "Bash(npm run *)",
      "Bash(npm install *)",
      "Bash(npm i *)",
      "Bash(npx *)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git stash*)",
      "Bash(node *)",
      "Bash(ls *)",
      "Bash(mkdir *)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Bash(rm -rf *)",
      "Bash(git push --force*)",
      "Bash(git reset --hard*)",
      "Bash(git clean -f*)",
      "Bash(DROP TABLE*)",
      "Bash(DROP DATABASE*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$TOOL_INPUT\" | grep -qE '\\.(ts|tsx|js|jsx|json|css|md)$' 2>/dev/null; then npx prettier --write \"$TOOL_INPUT\" 2>/dev/null || true; fi",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$TOOL_INPUT\" | grep -qE 'rm -rf|DROP TABLE|DROP DATABASE|git push --force|git reset --hard' 2>/dev/null; then echo '{\"decision\": \"block\", \"reason\": \"Dangerous command blocked by hook\"}' >&2; exit 2; fi",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Remember: update Serena session-state memory if you made progress!'",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Success'",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
